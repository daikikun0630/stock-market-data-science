[flake8]
max-line-length = 127
max-complexity = 10
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    .eggs,
    *.egg-info

ignore =
    # line too long (handled by formatter)
    E501,
    # line break before binary operator
    W503

per-file-ignores =
    # imported but unused in __init__.py
    __init__.py: F401
